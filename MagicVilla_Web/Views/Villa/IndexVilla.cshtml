@model IEnumerable<MagicVilla_Web.Models.Dto.VillaDTO>
<br />
<div class="container" p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Villa" asp-action="CreateVilla" class="btn btn-outline-primary">Create New Villa</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var villa in Model)
            {
                <tr>
                    <td>@villa.Name</td>
                    <td>@villa.Occupancy</td>
                    <td>@((villa.Rate).ToString())</td>
                    <td>
                        <a asp-controller="Villa" asp-action="UpdateVilla" class="btn btn-outline-primary">Create New Villa</a>
                        <a asp-controller="Villa" asp-action="DeleteVilla" class="btn btn-outline-primary">Create New Villa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>